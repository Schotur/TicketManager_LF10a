{
  "name": "ticketmanager",
  "version": "1.0.0",
  "description": "Ticket-Manger Projekt von Noah, John und Mattis",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "reset-db": "node src/reset-db.js",
    "test-db": "node src/test-db.js",
    "test": "jest --config src/jest.config.js",
    "test:unit": "jest tests/unit --config src/jest.config.js --coverage",
    "test:integration": "jest tests/integration --config src/jest.config.js",
    "test:e2e": "playwright test --config src/playwright.config.js",
    "test:e2e:ui": "playwright test --ui --config src/playwright.config.js",
    "test:e2e:debug": "playwright test --debug --config src/playwright.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --watch --config src/jest.config.js",
    "test:coverage": "jest --coverage --config src/jest.config.js"
  },
  "keywords": [
    "ticketmanager"
  ],
  "author": "Noah, John und Mattis",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "electron": "^38.3.0",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "mariadb": "^3.4.5"
  }
}
